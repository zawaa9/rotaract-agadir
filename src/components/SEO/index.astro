---
import { SEO } from "astro-seo";
import type { ComponentProps } from "astro/types";

interface Props
  extends Pick<
    ComponentProps<typeof SEO>,
    "title" | "description" | "noindex" | "nofollow"
  > {
  image?: NonNullable<
    ComponentProps<typeof SEO>["openGraph"]
  >["basic"]["image"];
  imageAlt?: string;
  url?: NonNullable<ComponentProps<typeof SEO>["openGraph"]>["basic"]["url"];
}

const {
  title,
  description = "Rotaract Agadir Atlantique is a youth-led service club in Agadir, Morocco, dedicated to community service, leadership, and personal development.",
  image = new URL("/opengraph-image.jpg", Astro.site).toString(),
  imageAlt,
  noindex,
  nofollow,
  url = Astro.url,
} = Astro.props;

const ogImageAlt = "Rotaract Agadir Atlantique";
const titleDefault = "Rotaract Agadir Atlantique";
---

<SEO
  title={title ?? ""}
  titleTemplate="%s | Rotaract Agadir Atlantique"
  titleDefault={titleDefault}
  description={description ?? ""}
  noindex={noindex ?? false}
  nofollow={nofollow ?? false}
  openGraph={{
    basic: {
      title: title ?? titleDefault,
      type: "website",
      image: image,
      url: url ?? "",
    },
    optional: {
      description,
    },
    image: {
      alt: imageAlt ?? ogImageAlt,
    },
  }}
  twitter={{
    card: "summary_large_image",
    title: title ?? titleDefault ?? "",
    description: description ?? "",
    image: image,
    imageAlt: imageAlt ?? ogImageAlt,
  }}
/>
